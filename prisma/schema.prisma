generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  memberCardId  String?     @unique @db.Uuid
  memberCard    MemberCard? @relation(fields: [memberCardId], references: [id], onDelete: SetNull)
  sessions      Session[]
  accounts      Account[]
  loans         Loan[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Loan {
  id       String   @id @default(uuid()) @db.Uuid
  userId   String
  bookId   String   @db.Uuid
  loanDate DateTime
  book     Book     @relation(fields: [bookId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

model Author {
  id    String @id @default(uuid()) @db.Uuid
  name  String
  books Book[]
}

model Book {
  id            String  @id @default(uuid()) @db.Uuid
  name          String
  genre         String
  authorId      String  @db.Uuid
  description   String?
  publisher     String?
  publishedDate String?
  imageLink     String?

  author Author @relation(fields: [authorId], references: [id], onDelete: Cascade)
  loans  Loan[]
}

enum StatusCard {
  FREE
  IN_USE
  ARCHIVED
}

model MemberCard {
  id     String     @id @default(uuid()) @db.Uuid
  name   String
  status StatusCard @default(FREE)
  user   User?
}
